# Filename: utils/selenium_actions.py # Description: Added lightweight logging wrappers and error handling for common Selenium actions.  import logging from selenium.common.exceptions import WebDriverException  logger = logging.getLogger(__name__)  def safe_click(element, element_name, page_name, driver):     try:         logger.info(f"Clicking '{element_name}' on '{page_name}' ({driver.current_url})")         element.click()         logger.info(f"Clicked '{element_name}' on '{page_name}' ({driver.current_url})")     except WebDriverException as e:         error_msg = (             f"[ERROR] Failed to click '{element_name}' on '{page_name}' ({driver.current_url}): {e}"         )         logger.error(error_msg)         raise  def safe_assert_visible(element, element_name, page_name, driver):     try:         assert element.is_displayed(), (             f"[ERROR] '{element_name}' not visible on '{page_name}' ({driver.current_url})"         )         logger.info(f"Verified '{element_name}' is visible on '{page_name}' ({driver.current_url})")     except AssertionError as e:         logger.error(str(e))         raise