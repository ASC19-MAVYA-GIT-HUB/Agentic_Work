# Filename: utils/config_provider.py # Description: Created a configuration provider abstraction using environment variables. Removes hardcoded values.  import os  class ConfigProvider:     """     Provides environment-specific configuration from environment variables.     Falls back to defaults if not set, for backward compatibility.     """     def __init__(self):         self.base_url = os.getenv("BASE_URL", "https://smb.pie.portalshell.int.hp.com")         self.username = os.getenv("USERNAME", "consolidated_pie_admin_smbOnlyPrinter_12_10@yopmail.com")         self.password = os.getenv("PASSWORD", "smb_2021")      def get(self, key):         if key == "base_url":             return self.base_url         elif key == "username":             return self.username         elif key == "password":             return self.password         else:             raise KeyError(f"Unknown config key: {key}")