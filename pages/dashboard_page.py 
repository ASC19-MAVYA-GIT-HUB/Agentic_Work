# Filename: pages/dashboard_page.py # Description: Refactored Dashboard Page Object to use centralized locator utility and improved error handling.  # No previous code (new Page Object)  from selenium.webdriver.common.by import By from utils.element_finder import ElementFinder from utils.selenium_actions import safe_click, safe_assert_visible  class DashboardPage:     def __init__(self, driver):         self.driver = driver         self.finder = ElementFinder(driver)      def get_welcome_banner(self):         # Layered locator strategy for Welcome Banner         locators = {             "aria-label": (By.XPATH, "//*[@aria-label='Welcome Banner']"),             "data-testid": None,             "semantic": (By.XPATH, "//section[contains(@class, 'welcome-banner')]"),             "text": (By.XPATH, "//*[contains(text(), 'Welcome')]"),         }         return self.finder.find("Welcome Banner", "Dashboard", locators)      def get_install_hp_smart_app_button(self):         locators = {             "aria-label": (By.XPATH, "//*[@aria-label='Install HP Smart App']"),             "data-testid": (By.CSS_SELECTOR, "[data-testid='install-hp-smart-app']"),             "semantic": (By.XPATH, "//button[contains(@class, 'install-hp-smart-app')]"),             "text": (By.XPATH, "//button[contains(text(), 'Install HP Smart App')]"),         }         return self.finder.find_clickable("Install HP Smart App Button", "Dashboard", locators)      def get_download_now_link(self):         locators = {             "aria-label": (By.XPATH, "//*[@aria-label='Download now']"),             "data-testid": (By.CSS_SELECTOR, "[data-testid='download-now-link']"),             "semantic": (By.XPATH, "//a[contains(@class, 'download-now')]"),             "text": (By.XPATH, "//a[contains(text(), 'Download now')]"),         }         return self.finder.find_clickable("Download Now Link", "Dashboard", locators)      def get_learn_more_link(self):         locators = {             "aria-label": (By.XPATH, "//*[@aria-label='Learn more']"),             "data-testid": (By.CSS_SELECTOR, "[data-testid='learn-more-link']"),             "semantic": (By.XPATH, "//a[contains(@class, 'learn-more')]"),             "text": (By.XPATH, "//a[contains(text(), 'Learn more')]"),         }         return self.finder.find_clickable("Learn More Link", "Dashboard", locators)