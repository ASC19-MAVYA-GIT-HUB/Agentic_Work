# Filename: pages/login_page.py # Description: Refactored Login Page Object to use locator utility and config provider.  from selenium.webdriver.common.by import By from utils.element_finder import ElementFinder from utils.selenium_actions import safe_click, safe_assert_visible  class LoginPage:     def __init__(self, driver):         self.driver = driver         self.finder = ElementFinder(driver)      def login(self, username, password):         email_field = self.finder.find("Username Field", "Login", {             "name": (By.NAME, "username"),             "data-testid": (By.CSS_SELECTOR, "[data-testid='username']"),         })         email_field.clear()         email_field.send_keys(username)          password_field = self.finder.find("Password Field", "Login", {             "name": (By.NAME, "password"),             "data-testid": (By.CSS_SELECTOR, "[data-testid='password']"),         })         password_field.clear()         password_field.send_keys(password)          login_button = self.finder.find_clickable("Login Button", "Login", {             "type": (By.XPATH, "//button[@type='submit']"),             "data-testid": (By.CSS_SELECTOR, "[data-testid='login-submit']"),         })         safe_click(login_button, "Login Button", "Login", self.driver)